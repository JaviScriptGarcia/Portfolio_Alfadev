---
import ProjectSlider from "@/components/react/ProjectSlider";
import { markdownify } from "@/lib/utils/textConverter";

export type ProjectItem = {
  image: string;
  title: string;
  description: string;
  technologies: string[];
  link?: string;
};

export type Projects = {
  title: string;
  description: string;
  project_list: ProjectItem[];
};

const { projects } = Astro.props;
---

<section class="projects">
  <div class="container">
    <div class="row justify-between">
      <div class="lg:col-6 lg:mb-0 mb-4">
        <h2 set:html={markdownify(projects.title)}/>
      </div>
      <div class="lg:col-4">
        <p set:html={markdownify(projects.description)}/>
      </div>
    </div>
    <div class="row mt-2 md:mt-10">
      <div class="col-12">
        <ProjectSlider list={projects.project_list} client:load />
      </div>
    </div>
  </div>
</section> 