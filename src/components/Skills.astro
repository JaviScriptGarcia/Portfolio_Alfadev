---
import { markdownify } from "@/lib/utils/textConverter";
import SkillsGrid from "@/components/react/SkillsGrid";

const { skills } = Astro.props;
const { title, description, skill_categories } = skills;
---

<section class="section skills relative">
  <div class="container">
    <div class="row justify-center text-center">
      <div class="lg:col-8">
        <h2 set:html={markdownify(title)} />
        <p class="mt-6 text-text-secondary" set:html={markdownify(description)} />
      </div>
    </div>
    <SkillsGrid skill_categories={skill_categories} client:load />
  </div>
</section>
